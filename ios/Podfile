# Autogenerated-like Podfile (créé manuellement)
platform :ios, '12.0'

# Désactive l'intégration automatique, Flutter gère ses frameworks
install! 'cocoapods', :disable_input_output_paths => true

require File.expand_path(File.join('..', 'Flutter', 'flutter_export_environment'))
require File.expand_path(File.join('..', '.flutter-plugins')) rescue nil

flutter_root = File.expand_path(File.join('..', 'Flutter'))
load File.join(flutter_root, 'podhelper.rb')

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # Ajout Firebase pods explicites si nécessaire (normalement via plugins)
  # pod 'Firebase/Core'
  # pod 'Firebase/Auth'
  # pod 'Firebase/Firestore'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
    end
  end
end

